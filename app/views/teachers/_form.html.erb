<div class="row">    
  <div class="col-lg-6">  
    <%= form_for(@teacher) do |f| %>
       <h3>Personal Information</h3>
      <% if @teacher.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>
    
          <ul>
          <% @teacher.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="field">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name %>
      </div>
      <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name %>
      </div>
      <div class="field">
        <%= f.label :surname %><br>
        <%= f.text_field :surname %>
      </div>
      <div class="field">
        <%= f.label :gender %><br>
        <%= f.text_field :gender %>
      </div>
      <div class="field">
        <%= f.label :dob %><br>
        <%= f.date_select :dob %>
      </div>
      <div class="field">
        <%= f.label :status %><br>
        <%= f.text_field :status %>
      </div>
      <div class="field">
        <%= f.label :employer %><br>
        <%= f.text_field :employer %>
      </div>
      <div class="field">
        <%= f.label :employment_date %><br>
        <%= f.date_select :employment_date %>
      </div>
      <div class="field">
        <%= f.label :nationality %><br>
        <%= f.text_field :nationality %>
      </div>
      <div class="field">
        <%= f.label :employer_id %><br>
        <%= f.text_field :employer_id %>
      </div>
      
  </div><!-- /column 1-->
    
  <div class="col-lg-6">
      <h3>Contact Details</h3>
      
       <%= f.fields_for :contacts do |contact| %>
         <div class="field">
           <%= contact.label :father %><br>
           <%= contact.text_field :father %>
         </div>
         
         <div class="field">
           <%= contact.label :mother %><br>
           <%= contact.text_field :mother %>
         </div>
         
         <div class="field">
           <%= contact.label :guardian %><br>
           <%= contact.text_field :guardian %>
         </div>
         
         <div class="field">
           <%= contact.label :email %><br>
           <%= contact.text_field :email %>
         </div>
         
         <div class="field">
           <%= contact.label :address %><br>
           <%= contact.text_field :address %>
         </div>
         
         <div class="field">
           <%= contact.label :phone %><br>
           <%= contact.number_field :phone %>
         </div>
         
         <div class="field">
           <%= contact.label :private_number %><br>
           <%= contact.text_field :private_number %>
         </div>
         
         <div class="field">
           <%= contact.label :county %><br>
            <%#= f.select :county, ["One","Two","etc"] %>
           <%= contact.text_field :county %>
         </div>
         
         <div class="field">
           <%= contact.label :country %><br>
           <%= contact.number_field :country %>
         </div>
        <% end %><!-- end second form -->
  </div><!-- /column 2 -->
    
  <div class="col-lg-12">
      <div class="field">
        <%= f.label :education %><br>
        <%= f.text_field :education %>
      </div>
      
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %><!-- end whole form -->
  </div>
</div><!-- /row -->
    
    
