<p id="notice"><%= notice %></p>

<h1>Listing Teachers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Surname</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Status</th>
      <th>Employer</th>
      <th>Employment date</th>
      <th>Nationality</th>
      <th>Employer</th>
      <th>Education</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.surname %></td>
        <td><%= teacher.gender %></td>
        <td><%= teacher.dob %></td>
        <td><%= teacher.status %></td>
        <td><%= teacher.employer %></td>
        <td><%= teacher.employment_date %></td>
        <td><%= teacher.nationality %></td>
        <td><%= teacher.employer_id %></td>
        <td><%= teacher.education %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

