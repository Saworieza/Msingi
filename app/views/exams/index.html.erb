<p id="notice"><%= notice %></p>

<h1>Listing Exams</h1>

<table>
  <thead>
    <tr>
      <th>Term</th>
      <th>Exam</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Passmark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.term.name %></td>
        <td><%= exam.name %></td>
        <td><%= exam.start_date %></td>
        <td><%= exam.end_date %></td>
        <td><%= exam.passmark %></td>
        <td><%= link_to 'Show', exam %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

