<p id="notice"><%= notice %></p>

<h1>Listing Book Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_statuses.each do |book_status| %>
      <tr>
        <td><%= book_status.status %></td>
        <td><%= book_status.comment %></td>
        <td><%= link_to 'Show', book_status %></td>
        <td><%= link_to 'Edit', edit_book_status_path(book_status) %></td>
        <td><%= link_to 'Destroy', book_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

